                        <a href="#"> <button type="button" class="loyalty-btn btn">Loyalty</button></a>
                        <a href="#"> <button type="button" class="taxes-btn btn">Taxes</button></a> -->

                </div>
            </div>
        </div>
    </div>
    <div class="features-card" style="display: none;">
        <!-- <div class="features"> -->
        <div class="payment-type-container">
            <div id="alert-box"></div>
            <div class="title" style="text-align: center; font-weight: bold;padding: 22px; ">
                Payment Types
            </div>
            <div class="payment-type">
                <button name="add-payment-type" type="button" class="add-payment-type-btn" id="addPayment">+ </button>
                <div class="" id="payment-details-Form">
                    <form class="form-container" method="post" action="/paymenttypes">
                        <label class="myPaymentId" for="dep" hidden>Id</label>
                        <button type="submit" class="btn-save">SAVE</button>
                        <button type="button" class="btn-cancel" onclick="closeForm()"> CANCEL</button>
                        <!-- <button type="button" name="" id="selectPay1" onclick="openPaymentType()">
                                Select Payment Type
                                <i class="fa fa-caret-down icon-color " aria-hidden="true"></i>
                            </button> -->
                        <div class="dropdown" id="currDrop" style="margin-top: 12px;margin-left: 17px;">
                            <a class="btn dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown"
                                aria-expanded="false" style="background-color: transparent;">
                                <span class="selectPay1" style="color: gray;">Select Payment Type</span>
                            </a>
                            <ul class="dropdown-menu myCurrencydrop">
                                <li><a class="dropdown-item btn" id="cash-option" href="#">Cash </a></li>
                                <li><a class="dropdown-item btn" id="card-option" href="#">Card </a></li>
                                <li><a class="dropdown-item btn" id="mobile-option" href="#">Mobile </a></li>
                                <li><a class="dropdown-item btn" id="other-option" href="#">Other</a></li>
                            </ul>
                        </div>
                        <input type="text" id="paymentnameid" placeholder="Name">
                        <input type="number" name="amount" pattern="[0-9]+([.][0-9]+)?" step="any" id="rateid"
                            required="true" placeholder="Rate">
                    </form>
                </div>
                <button class="delete"><i class="fa fa-trash" aria-hidden="true"></i></button>
            </div>
            <div class="currencyContainer">
                <table class="currency-list" cellspacing="0">
                    <thead class="currency-list-headings">
                        <tr class="table-row" id="currency-row">
                            <td><input type="checkbox" class="form-check-input" name="" id="myCheck"
                                    value="checkedValue">
                            </td>
                            <td><span class="base-currency-cell" id="base-currency">Base Currency</span></td>
                            <td><span class="currencyType" id="currencyType"></span>Currency Type</td>
                            <td><span class="currency-cell" id="currency-name">Currency Name</span></td>
                            <td><span class="rate" id="rate"></span>Rate</td>

                        </tr>
                    </thead>
                    <tbody class="table-body-create-discount">
                    </tbody>
                </table>
            </div>
            <div id="notificationBlock"></div>
            <div id="delete-modal" class="modal" style="margin-bottom:-27px ;">
                <div class="modal-content">
                    <button id="confirm-delete-btn" class="confirm_delete"><i class="fa fa-trash"
                            aria-hidden="true"></i></button>
                </div>
            </div>

        </div>
        <div class="accSettingContainer" style="display: none;">
            <div class="periodText">Set Accounting Period</div>
            <span class="hiddenId" hidden></span>

            <form id="accountingPeriodForm">
                <!-- store the document id in a hidden span
                  -->
                <div class="form-group startDate" style="display: inline-block;">
                    <label for="startDate">Start Date:</label>
                    <input type="date" class="startDate" id="startDate" name="startDate" required>
                </div>
                <div class="form-group" style="display: inline-block;">
                    <label for="endDate">End Date:</label>
                    <input type="date" class="endDate" id="endDate" name="endDate" disabled>
                </div>
                <button class="setAccountingPeriodBtn" type="submit">Save</button>
            </form>
        </div>

    </div>
