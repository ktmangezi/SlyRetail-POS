    </div>

    <!--The MENU ITEMS-->
    <div class="icon-nav close" style="display: none;">
        <script src="js/common-iconsFE.js"></script>
    </div>

    <!--The page Content-->
    <div class="general-settings-card" style="display: none;">
        <label for="features" class="general-settings-label">GENERAL SETTINGS</label>

        <div class="form-container">
            <div id="">
                <div id="select-chart-period">
                    <button type="button" class="payment-type-btn bttn active">Payment Types</button>
                    <button type="button" class="accountingPeriod-btn bttn">Accounting Period</button>
                    <!-- <a href="licensingsubscription"> <button type="button" class="bills-subscritions-btn btn">Billing -->
                    <!-- and Subscriptions</button></a>
                    <a href="createstores"> <button type="button" class="create-stores-btn btn">Stores</button>
                        <a href="posdevices"> <button type="button" class="pos-btn btn">POS Devices</button></a>
                        <a href="createreceipt"><button type="button" class="edit-recepts-btn btn">Receipt</button></a>
                        <a href="creatediscount"><button type="button" class="discounts-btn btn">Create
                                Discount</button></a>
                        <a href="createcategory"> <button type="button" class="categories-btn btn">Create
